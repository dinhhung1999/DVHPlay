<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="title">Play Video</item>
    </style>
    <style name="styleTextMenuBottom">
        <item name="android:textColor">@color/colorBackgroundDefaul</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="FontTextHomeTitle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontWeight">3</item>
    </style>
    <style name="fontTextHome">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/colorBackgroundDefaul</item>
    </style>
    <style name="fontTextItem">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="EditScreenTextInputLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/textInputLayout</item>
        <item name="colorControlActivated">@color/textInputLayout</item>
        <item name="colorControlHighlight">@color/textInputLayout</item>
        <item name="colorAccent">@color/textInputLayout</item>
        <item name="android:textColorHint">@color/textInputLayout</item>
    </style>
    <style name="fontMoreFragment">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="fontUserName">
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textColor">@color/colorBackgroundMain</item>
    </style>
</resources>